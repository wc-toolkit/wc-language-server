// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch HTML",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "--folder-uri=${workspaceRoot}/demos/html"
      ],
      "outFiles": ["${workspaceFolder}/packages/vscode/dist/**/*.js"],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Launch NPM",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "--folder-uri=${workspaceRoot}/demos/npm"
      ],
      "outFiles": ["${workspaceFolder}/packages/vscode/dist/**/*.js"],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Launch React",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "--folder-uri=${workspaceRoot}/demos/react"
      ],
      "outFiles": ["${workspaceFolder}/packages/vscode/dist/**/*.js"],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Attach to Language Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "outFiles": ["${workspaceFolder}/packages/language-server/dist/**/*.js"],
      "autoAttachChildProcesses": true
    }
  ],
  "compounds": [
    {
      "name": "HTML Demo",
      "configurations": ["Launch HTML", "Attach to Language Server"]
    },
    {
      "name": "NPM Demo",
      "configurations": ["Launch NPM", "Attach to Language Server"]
    },
    {
      "name": "React Demo",
      "configurations": ["Launch React", "Attach to Language Server"]
    }
  ]
}
