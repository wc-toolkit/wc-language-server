{
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/volarjs/starter.git"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "build:ls": "pnpm --filter @wc-toolkit/language-server run build",
    "changeset": "changeset add",
    "watch": "cd ./packages/vscode && npm run watch",
    "vscode:pack": "npm run build && cd ./packages/vscode && npm run pack",
    "vscode:release": "npm run build && cd ./packages/vscode && npm run release",
    "jetbrains:build": "cd ./packages/jetbrains && ./gradlew buildPlugin",
    "jetbrains:run": "cd ./packages/jetbrains && ./gradlew runIde",
    "jetbrains:test": "cd ./packages/jetbrains && ./gradlew test",
    "release": "pnpm -r run release",
    "clean": "git clean -fdX",
    "format": "prettier . --write",
    "lint": "eslint",
    "lint:fix": "eslint --fix .",
    "test": "node --test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.19.0",
    "@types/node": "latest",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "prettier": "3.4.2",
    "typescript": "latest",
    "typescript-eslint": "^8.21.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.--write": "prettier --write"
  },
  "license": "MIT"
}
