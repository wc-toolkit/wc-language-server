{
  "name": "@wc-toolkit/language-server",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "description": "Language server that surfaces Web Components metadata, completions, and diagnostics",
  "exports": {
    ".": "./dist/*",
    "./services": "./dist/services/index.js",
    "./plugins": "./dist/plugins/index.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wc-toolkit/wc-language-server.git",
    "directory": "packages/language-server"
  },
  "bugs": {
    "url": "https://github.com/wc-toolkit/wc-language-server/issues"
  },
  "homepage": "https://github.com/wc-toolkit/wc-language-server",
  "keywords": [
    "language-server",
    "web-components",
    "custom-elements",
    "lsp",
    "html",
    "typescript",
    "javascript",
    "cem",
    "custom-elements-manifest",
    "css"
  ],
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "wc-language-server": "./bin/wc-language-server.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "zsh -c 'source ~/.zshrc && pnpm run bundle:single && bun build --compile dist/wc-language-server.bundle.mjs --outfile dist/wc-language-server'",
    "bundle:single": "node ./scripts/build-single-file.mjs",
    "watch": "tsc -p tsconfig.json --watch",
    "test:unit": "node --test ./test/no-package-json.test.mjs",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "release": "pnpm run build && npm publish --access=public"
  },
  "dependencies": {
    "esbuild": "^0.27.0",
    "@volar/language-core": "~2.4.0",
    "@volar/language-server": "~2.4.0",
    "@volar/typescript": "~2.4.0",
    "@wc-toolkit/cem-utilities": "^1.5.4",
    "custom-elements-manifest": "2.1.0",
    "minimatch": "^10.0.3",
    "typescript": "^5.6.3",
    "volar-service-css": "volar-2.4",
    "volar-service-emmet": "volar-2.4",
    "volar-service-html": "volar-2.4",
    "volar-service-typescript": "volar-2.4",
    "vscode-css-languageservice": "^6.3.8",
    "vscode-html-languageservice": "^5.3.1",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "vscode-languageserver-types": "^3.17.5"
  }
}
