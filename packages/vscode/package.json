{
  "name": "web-components-language-server",
  "version": "0.0.9",
  "icon": "assets/icon_alpha.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/wc-toolkit/wc-language-server.git",
    "directory": "packages/vscode"
  },
  "categories": [
    "Programming Languages"
  ],
  "displayName": "Web Components Language Server",
  "description": "Editor tools for working with web components / custom elements",
  "author": "wc-toolkit",
  "publisher": "wc-toolkit",
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/client.js",
  "contributes": {
    "commands": [
      {
        "command": "wcLanguageServer.restart",
        "title": "Web Components: Restart Language Server"
      }
    ]
  },
  "scripts": {
    "build": "node scripts/build -- --minify",
    "watch": "npm run build -- --watch",
    "pack": "npm run build && vsce package --pre-release",
    "publish:open-vsx": "npm run pack && ovsx publish ./web-components-language-server-*.vsix --pat $OPENVSX_TOKEN",
    "release": "npm run build && vsce publish && npm run publish:open-vsx"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@volar/language-server": "~2.4.0",
    "@volar/vscode": "~2.4.0",
    "@wc-toolkit/language-server": "workspace:*",
    "esbuild": "latest",
    "ovsx": "latest",
    "vsce": "latest"
  },
  "license": "MIT"
}
