{
  "name": "@wc-toolkit/wctools",
  "version": "0.0.1",
  "description": "CLI tool for validating Web Components using Custom Elements Manifest",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "wctools": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:deps": "pnpm --filter @wc-toolkit/language-server run build",
    "prebuild": "npm run build:deps",
    "dev": "tsx src/cli.ts",
    "demo": "tsx src/cli.ts --config demo/wc.config.js",
    "demo:help": "tsx src/cli.ts -h",
    "demo:json": "tsx src/cli.ts --config demo/wc.config.js --format json",
    "demo:junit": "tsx src/cli.ts --config demo/wc.config.js --format junit",
    "demo:init": "tsx src/cli.ts init",
    "release": "pnpm run build && npm publish --access=public",
    "test": "node --test ./test/*.test.mjs",
    "test:demo": "npm run build && cd demo && node ../dist/cli.js validate *.html"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "validation",
    "cli",
    "html"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.0",
    "minimatch": "^10.0.3",
    "vscode-html-languageservice": "^5.3.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-languageserver-types": "^3.17.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
